<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:titleTextStyle">@style/MyActionBar.Text</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#543104</item>
        <item name="android:titleTextStyle">@style/MyActionBar.Text</item>
        <item name="android:icon">@android:color/transparent</item> <!-- This does the magic! -->
    </style>

    <style name="MyActionBar.Text" parent="@android:style/TextAppearance">
        <item name="android:textColor">#543104</item>
        <item name="android:textSize">35sp</item>
    </style>

    <style name="buttonTextColorAndSize">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/tan</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/round_edge_button</item>
        <item name="android:padding">10dp</item>
    </style>

</resources>
